# Frontend Environment Variables for Fashion Fit
# Copy this file to .env.local and fill in your actual values

# Backend API URL
# Local: http://localhost:5000
# Production: https://your-backend-app.up.railway.app
NEXT_PUBLIC_API_URL=http://localhost:5000

# OpenAI API Key (Optional - for Smart Camera feature)
# Get your API key from: https://platform.openai.com/api-keys
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Enable Smart Camera feature (default: false)
NEXT_PUBLIC_ENABLE_SMART_CAMERA=false

